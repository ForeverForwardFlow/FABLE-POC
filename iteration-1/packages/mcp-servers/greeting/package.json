{
  "name": "@fable/mcp-greeting",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP server for greeting users by name",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-greeting": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc -p tsconfig.worker.json",
    "dev": "tsc --watch",
    "dev:worker": "wrangler dev",
    "start": "node dist/index.js",
    "deploy": "npm run build:worker && wrangler deploy",
    "deploy:dry-run": "npm run build:worker && wrangler deploy --dry-run",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fable/shared": "*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.7",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  }
}
